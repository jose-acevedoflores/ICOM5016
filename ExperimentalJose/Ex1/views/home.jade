!!!
html
	head
		title Woot
		meta( name="viewport", content="width=device-width, initial-scale=1")
		link(rel="stylesheet", href="../css/jquery.mobile-1.3.1.css" )
		script(src="../js/jquery-1.10.2.js")	
		script(src="../js/jquery.mobile-1.3.1.js")
		script(type="text/javascript", src="../js/myapp.js")	
		script(type="text/javascript", src="../js/controller/homeController.js")

	body
		div(data-role="page", id="home")
			include common

			div(data-role="content")
				h1 Stores
				p Browse our wonderful selection of merchandise. Check out today's hot deals 
				ul(data-role="listview", id="electronicsList", data-inset="true")
					li(data-role="list-divider", data-theme="a")
						a(onclick="electronicsStore()")	Electronics
				ul(data-role="listview", id="booksList", data-inset="true")
					li(data-role="list-divider", data-theme="a")
						a(onclick="bookStore()") Books		
				ul(data-role="listview", id="computersList", data-inset="true")
					li(data-role="list-divider", data-theme="a")
						a(onclick="computerStore()") Computers
				ul(data-role="listview", id="clothingList", data-inset="true")
					li(data-role="list-divider", data-theme="a")
						a(onclick="clothingStore()") Clothing
				ul(data-role="listview", id="shoesList", data-inset="true")
					li(data-role="list-divider", data-theme="a")
						a(onclick="shoeStore()") Shoes
				ul(data-role="listview", id="sportsList", data-inset="true")
					li(data-role="list-divider", data-theme="a")
						a(onclick="sportStore()") Sports

		div(data-role="page", id="store")
			include common	
			div(data-role="content", id="storeContent")

		div(data-role="page", id="category")				
			include common
			div(data-role="content")
				div(data-role="controlgroup", data-type="horizontal", id="categoryNavigator") 	
				div(data-role="fieldcontain")
					select(name="SortOrder", id="sortOrder")
						optgroup(label="Price")
							option(value="highToLow") High to Low
							option(value="lowToHigh") Low to High
						optgroup(label="Brand")	
							option(value="alphabetical") Alphabetical order (Brand)
							option(value="revAlphabetical") Reverse Alphabetical (Brand)
						optgroup(label="Item Name")
							option(value="alphabetical") Alphabetical order (Item Name)
							option(value="revAlphabetical") Reverse Alphabetical (Item Name)		
				br			
				ul(data-role="listview", data-inset="true", data-filter="true", id="categoryItemList", data-filter-placeholder="Filter items")			

		div(data-role="page", id="shoppingCart")
			include common	
			div(data-role="content")
				h3 Items in cart						
				ul(data-role="listview", data-inset="true", data-filter="true", id="cartItemList", data-filter-placeholder="Filter items in cart")

