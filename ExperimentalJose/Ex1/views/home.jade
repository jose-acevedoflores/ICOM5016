!!!
html
	head
		title Woot
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel="stylesheet", href="../css/jquery.mobile-1.3.1.css" )
		script(src="../js/jquery-1.10.2.js")
		script(src="../js/jquery.mobile-1.3.1.js")
		script(type="text/javascript", src="../js/myapp.js")
		script(type="text/javascript", src="../js/controller/homeController.js")

	body 
		div(data-role="page", id="home")
			include common

			div(data-role="content")
				h1 Stores
				p Browse our wonderful selection of merchandise. Check out today's hot deals 		
				- for (var i = 0 ; i < data.dataLength ; i++)
					ul(data-role="listview", id="#{data.stores[i].name}List" , data-inset="true" )	
						li(data-role="list-divider", data-theme="a")
							a(onclick="findStore(\"#{data.stores[i].name}\")")	#{data.stores[i].name}
		// Add stores divs					
		-for(var i = 0 ; i < data.dataLength ; i++)			
			div(data-role="page", id="#{data.stores[i].name}Store")
				include common
				div(data-role="content", id="#{data.stores[i].name}StoreContent")
					p Browse our wonderful selection of merchandise. Check out today's hot deals
					h3 #{data.stores[i].name} 
					- for(var c = 0 ; c < data.stores[i].categoriesLength ; c++)
						ul(data-role="listview", id="#{data.stores[i].categories[c]}STORE#{data.stores[i].name}List", data-inset="true")
							li(data-role="list-divider", data-theme="a")
								a(onclick="findCategory(\"#{data.stores[i].name}\",\"#{data.stores[i].categories[c]}\")") #{data.stores[i].categories[c]}	

		//Add categories divs						
		-for(var i = 0 ; i < data.dataLength ; i++)
			-for(var c = 0 ; c < data.stores[i].categoriesLength ; c++)
				div(data-role="page", id="#{data.stores[i].categories[c]}Category")				
					include common
					div(data-role="content")
						div(data-role="controlgroup", data-type="horizontal", id="#{data.stores[i].categories[c]}CategoryNavigator") 	
							a(href="#", data-role="button") #{data.stores[i].name}
							a(href="#", data-role="button") #{data.stores[i].categories[c]}
						div(data-role="fieldcontain")
							select(name="SortOrder", id="sortOrder")
								optgroup(label="Price")
									option(value="highToLow") High to Low
									option(value="lowToHigh") Low to High
								optgroup(label="Brand")	
									option(value="alphabetical") Alphabetical order (Brand)
									option(value="revAlphabetical") Reverse Alphabetical (Brand)
								optgroup(label="Item Name")
									option(value="alphabetical") Alphabetical order (Item Name)
									option(value="revAlphabetical") Reverse Alphabetical (Item Name)		
						br			
						ul(data-role="listview", data-inset="true", data-filter="true", id="#{data.stores[i].categories[c]}CategoryItemList", data-filter-placeholder="Filter items")						

        

		div(data-role="page", id="shoppingCart")
			include common	
			div(data-role="content")
				h3 Items in cart						
				ul(data-role="listview", data-inset="true", id="cartItemList")
				h3 Order Total: 	
				h3(id="shoppingCartAmount") 
				input(type="submit", value="Proceed to Checkout", onclick="checkoutCart()" )

				div(data-role="popup", id="removeItemFromCart", data-theme="d", data-overlay-theme="b", class="ui-content", style="max-width:340px;")
					h3 Delete from cart ?
					p The item will be removed of your cart 
					a(onclick="removeItemFromCart()", data-role="button", data-rel="back", data-theme="b", data-icon="check", data-inline="true", data-mini="true") Remove
					a(href="#", data-role="button", data-rel="back", data-inline="true", data-mini="true") Cancel


		div(data-role="page", id="itemsSold")
			include common	
			div(data-role="content")
				h3 History of Sold Items
				ul(data-role="listview", data-inset="true", id="itemsSoldList", data-filter="true", data-filter-placeholder="Search your Sold items")

				input(type="submit", value="Load More", onclick="loadMoreItemsSold()" )	

		div(data-role="page", id="logIn")
			include common
			div(data-role="content")
				form(id ="logInForm", method ="post", data-transition="pop")
					h1 Login:
					div(data-role="fieldcontain")
					label(for="Email") Email:
					input(class = "required", type ="text", name="Email", value="papasote_el_papaso@papaso.com")
					div(data-role="fieldcontain")
					label(for="Password") Password:
					input(class = "required", type ="text", name="Password", value="******")

					//- div(class ="ui-grid-a")
					//- 	div(class="ui-body ui-body-b")
					//- 		div(class="ui-block-a")
					a(href="#", type="submit",data-rel="back", data-inline="true", data-theme="b", value="Log In", onclick="loginForm()", data-mini="true") Login
							//- div(class="ui-block-b")
					a(href="#", data-icon = "delete", data-rel="back", data-inline="true", type="submit", value="Cancel", data-mini="true") Cancel
					

		div(data-role="page", id="register")
			include common
			div(data-role="content")
				h1 Register:
				form(id ="registerForm", method ="post", data-transition="pop")
					label(for="First Name") First Name:
					input(type ="text", name="First Name")
					label(for="Last Name") Last Name:
					input(type ="text", name="Last Name")
					label(for="Email") Email:
					input(type="text", name="Email")
					label(for="Password") Password:
					input(type="text", name="Password")
					label(for="Confirm Password") Confirm Password:
					input(type="text", name="Confirm Password")

					a(href="#", type="submit",data-rel="back", data-inline="true", data-theme="b", value="Log In", onclick="registerForm()", data-mini="true") Register
							
					a(href="#", data-icon = "delete", data-rel="back", data-inline="true", type="submit", value="Cancel", data-mini="true") Cancel
